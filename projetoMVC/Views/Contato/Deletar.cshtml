@model projetoMVC.Models.Contato;

@{
    ViewData["Title"] = "Deletar Contato";
}

<h2 style="color: red;">Deseja realmente deletar esse contato?</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deletar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for= "Nome" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for= "Telefone" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" disabled/>
            </div>
            <br>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Deletar" class="btn btn-danger">
            </div>
        </form>
    </div>
</div>